<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" prefHeight="460.0" prefWidth="300.0" stylesheets="/css/application.css">

    <center>
        <ScrollPane fitToHeight="true" fitToWidth="true">
            <content>
                <VBox id="interviewsPan" prefHeight="400.0" prefWidth="250.0" VBox.vgrow="ALWAYS">
                    <TableView fx:id="categoriesTable" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="selectColumn" prefWidth="75.0" text="%selection" />
                            <TableColumn fx:id="nameColumn" prefWidth="75.0" text="%category_name" />
                            <TableColumn fx:id="usesColumn" prefWidth="75.0" text="%uses" />
                            <TableColumn fx:id="propertiesColumn" prefWidth="75.0" text="%property_name" />
                            <TableColumn fx:id="interviewsColumn" prefWidth="75.0" text="%associated_interviews" />
                            <TableColumn fx:id="momentsColumn" prefWidth="75.0" text="%associated_moments" />
                        </columns>
                        <!-- Permettre le redimensionnement des colonnes -->
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                        </columnResizePolicy>
                    </TableView>
                    <HBox spacing="10" alignment="CENTER">
                        <Button id="btnVeri" fx:id="validateButton" mnemonicParsing="false" prefHeight="36.0" prefWidth="98.0" styleClass="button-gray" text="%confirm">
                            <font>
                                <Font size="18.0" />
                            </font>
                            <HBox.margin>
                                <Insets top="20.0" />
                            </HBox.margin>
                        </Button>
                    </HBox>
                </VBox>
            </content>
        </ScrollPane>
    </center>

</BorderPane>
