<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" prefHeight="460.0" prefWidth="300.0" stylesheets="/css/application.css">

    <center>
        <ScrollPane fitToHeight="true" fitToWidth="true">
            <content>
                <VBox id="interviewsPan" prefHeight="400.0" prefWidth="250.0" VBox.vgrow="ALWAYS">
                    <TableView fx:id="categoriesTable" VBox.vgrow="ALWAYS">

                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                        </columnResizePolicy>
                    </TableView>
                    <HBox spacing="10" alignment="CENTER">
                        <Button id="validateButton" fx:id="validateButton" mnemonicParsing="false" onAction="#handleValidateButton" prefHeight="36.0" prefWidth="98.0" styleClass="button-gray" text="%confirm">
                            <font>
                                <Font size="18.0" />
                            </font>
                            <HBox.margin>
                                <Insets top="20.0" />
                            </HBox.margin>
                        </Button>

                    </HBox>
                </VBox>
            </content>
        </ScrollPane>
    </center>

</BorderPane>
